<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('toast') }}
        {% endblock %}

        {% block head_javascripts %}
            {% if not isDevMode %}
                <!-- Google ads -->
                <script data-ad-client="ca-pub-1457190527508329" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            {% endif %}
        {% endblock %}

    </head>
    <body>

        {% include "_components/header.html.twig" %}

        {% block body %}{% endblock %}
        {% block js_variables %}
            <div id="toasts" data-toasts="{{ app.flashes|json_encode }}"></div>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('toast') }}

            {% if not isDevMode %}
                <!-- Global site tag (gtag.js) - Google Analytics -->
                <script async src="https://www.googletagmanager.com/gtag/js?id=UA-65579824-1"></script>
                <script>
                    window.dataLayer = window.dataLayer || [];
                    function gtag(){dataLayer.push(arguments);}
                    gtag('js', new Date());

                    gtag('config', 'UA-65579824-1');
                </script>
            {% endif %}
        {% endblock %}

    </body>
</html>
