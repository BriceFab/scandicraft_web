{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('slider') }}
{% endblock %}

{% block body %}
    <div class="carousel carousel-home mb-3">
        {% for home_slide in home_slides %}
            <div class="home-carousel-cell">
                {% set slide_img = vich_uploader_asset(home_slide, 'file') | imagine_filter('slides') %}

                <img class="carousel-cell-image"
                     alt="{{ home_slide.alt }}"
                     title="{{ home_slide.title }}"
                        {% if loop.index == 0 %}
                            src="{{ slide_img }}"
                        {% else %}
                            data-flickity-lazyload="{{ slide_img }}"
                        {% endif %}
                />

                <a href="{{ path('jouer') }}" class="d-none d-sm-block">
                    <div class="carousel-caption">
                        <p style="margin: 0;">
                            <b>ScandiCraft</b> - Serveur Minecraft: PvP/Faction Launcher Modd√© !
                        </p>
                    </div>
                </a>

            </div>
        {% endfor %}
    </div>

    {% if last_news|length > 0 %}
        {# News #}
        <div class="mb-3">
            {% for news in last_news %}
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="..." alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ news.title }}</h5>
                        <p class="card-text">
                            {{ news.content }}
                        </p>
                        <a href="#" class="btn btn-primary">
                            Lire la suite
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('slider') }}
{% endblock %}
